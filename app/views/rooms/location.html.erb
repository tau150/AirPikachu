<div class="row">
  <div class="col-md-3">
    <%= render 'room_menu' %>
  </div>
  <div class="col-md-9">
    <div class="card">
      <div class="card-block">
        <h4 class="card-title">Location</h4>
        <div>
          <%= form_for @room do |f| %>

            <div class="form-group">
              <label>Address</label>
              <%= f.text_field :address, placeholder: "What is your address", class: "form-control", required: true %>
            </div>

            <div class="form-group text-center">

              <%= f.submit "Save", class: "btn btn-form" %>
            </div>

          <%end%>
        </div>
      </div>
    </div>
  </div>
</div>

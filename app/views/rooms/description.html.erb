<div class="row">
  <div class="col-md-3">
    <%= render 'room_menu' %>
  </div>
  <div class="col-md-9">
    <div class="card">
      <div class="card-block">
        <h4 class="card-title">Description</h4>
        <div>
          <%= form_for @room do |f| %>
          <div class="row form-group">
            <label>Listing name</label>
            <%= f.text_field :listing_name, placeholder: "What is your listing name", class: "form-control", required: true %>
          </div>

          <div class="row form-group">
            <label>Summary</label>
            <%= f.text_area :summary, id:"description-text-area" , placeholder: "Summary of your home", class: "form-control", required: true %>
          </div>

          <div class="form-group text-center">
            <%= f.submit "Save", class: "btn btn-form" %>
          </div>

          <%end%>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-3">
    <ul class="sidebar-list">
      <li class="sidebar-item">
        <%= link_to "Your Listings", rooms_path, class: 'sidebar-link active' %> </li>
        <%= link_to "Your Reservations", rooms_path, class: 'sidebar-link active' %> </li>
      </li>
    </ul>
  </div>
  <div class="col-md-9">
    <div class="card" >
      <div class="card-block">
        <h5 class="card-title">Listings</h5>
        <% @rooms.each do |room | %>
            <div class="d-flex flex-row justify-content-between align-content-center align-items-start">
              <div class='ml-3'>
                <%= image_tag room.cover_photo(:thumb)%>
              </div>
              <h6 class='mr-auto pl-4'><%= room.listing_name %></h6>
              <div class='pr-4'>
                <%= link_to 'Update', listing_room_path(room), class: 'btn btn-form' %>
              </div>
          </div>
          <hr>
        <%end%>
      </div>
    </div>

  </div>
</div>
